---
permalink: "{% if league === 'all' %}index.html{% else %}{{ league }}.html{% endif %}"
title: Simple Sports Schedules
pagination:
  data: leagues
  size: 1
  alias: league
---
<h1>Upcoming week of games</h1>
{% for date, _games in games | nextWeek | orderByDate | groupByDay %}
    <h2>
        <time datetime="{{ date | toDate | iso }}">
            {{ date | toDate | easternDate }}
        </time>
    </h2>
    {% import 'games.section.html.njk' as section %}
    {{ section.list(_games, true) }}
{% endfor %}
